name: Deploy

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: chrome-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2
      
    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'
        
    - name: Install dependencies
      run: npm install
      
    - name: Build
      run: npm run build
      
    - name: Deploy to GitHub Pages
      uses: LEE-NS/WEEK1_team_introduce-page@4.1.5
      with:
        branch: gh-pages
        folder: build
        token: ${{ secrets.GITHUB_TOKEN }}
        env:
          API_KEY: ${{ secrets.API_KEY }}
